<div class="add-course">
  <div style="padding-top: 74px; padding-bottom:74px;" class="container mt-5">
    <h2>
      <%= course.name %>
    </h2>
    <form method="POST" action="/seller/courses/bill">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb-3 bill-wrapper">
          <table class="table table-striped table-dark">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Tên người mua</th>
                <th scope="col">Số tiền</th>
                <th scope="col">Ngày mua</th>
              </tr>
            </thead>
            <tbody>
              <% invoices.forEach(invoice=>{%>
                <tr>
                  <th scope="row">1</th>
                  <td>
                    <%= invoice.user_id.username %>
                  </td>
                  <td>$ <%= invoice.totalPayout%>
                  </td>

                  <td>
                    <%= invoice.createdAt.getDate() %> -
                    <%= invoice.createdAt.getMonth()+1 %> -
                    <%= invoice.createdAt.getFullYear() %> 
                  </td>
                </tr>

                <%})%>
            </tbody>
          </table>
        </div>

        
        <button  type="back" class="btn btn-secondary"><a href="/seller">Back</a></button>
    </form>
  </div>
</div>