<div class="add-course">
  <div style="padding-top: 74px; padding-bottom:74px;" class="container mt-5">
    <h2>
      <%= course.name %>
    </h2>
    <form method="POST" action="/seller/courses/bill">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb-3 bill-wrapper">
          <table class="table table-striped table-dark">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Tên người mua</th>
                <th scope="col">Số tiền</th>
                <th scope="col">Ngày mua</th>
                <th scope="col" style="text-align: center;">Tiến độ</th>
              </tr>
            </thead>
            <tbody>
              <% let id = 1 %>
              <% invoices.forEach(invoice=>{%>
                <tr>
                  <th scope="row"><%=id++%></th>
                  <td>
                    <%= invoice.user_id.username %>
                  </td>
                  <td>$ <%= invoice.totalPayout%>
                  </td>

                  <td>
                    <%= invoice.createdAt %>
                  </td>
                  <td>
                    <div class="progress">
                      <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: <%= invoice.percentFinish %>%"><%= invoice.percentFinish.toFixed(0) %>% done</div>
                    </div>
                  </td>
                </tr>
                <%})%>
            </tbody>
          </table>
        </div>

          <button onclick="location.href='/seller'" type="button" class="btn btn-secondary">Back</button>
    </form>
  </div>
</div>