<div class="add-course">
    <div style="padding-top: 100px; padding-bottom: 74px" class="container mt-5">
        <h2>Edit Question</h2>
        <% questions.forEach(function(question) { %>
            <form method="POST" action="/seller/courses/<%= question.course_id%>/questions/<%- question._id %>/edit?_method=PUT&<% if (edit){%>edit=true<%}%>">
                <input type="hidden" name="_method" value="PUT">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt-3 input-container">
                        <div class="row">
                            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                                <label for="name" class="form-label">Name Question</label>
                                <input type="text" class="form-control" id="question" name="question" value="<%= question.question %>"
                                    placeholder="Name Question" />
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                                <label for="name" class="form-label">Choose the correct answer</label>
                                <select class="form-control" aria-label="Default select example" name="trueAnswer" id="trueAnswer">
                                    <option value="a">A</option>
                                    <option value="b">B</option>
                                    <option value="c">C</option>
                                    <option value="d">D</option>
                                </select>
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                                <label for="name" class="form-label">A</label>
                                <input type="text" class="form-control" id="a" name="a" value="<%= question.a %>" placeholder="Answer" />
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                                <label for="name" class="form-label">B</label>
                                <input type="text" class="form-control" id="b" name="b" value="<%= question.b %>" placeholder="Answer" />
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                                <label for="name" class="form-label">C</label>
                                <input type="text" class="form-control" id="c" name="c" value="<%= question.c %>" placeholder="Answer" />
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                                <label for="name" class="form-label">D</label>
                                <input type="text" class="form-control" id="d" name="d" value="<%= question.d %>" placeholder="Answer" />
                            </div>
                            <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 mb-3 d-none">
                                <input type="checkbox" name="isEditQuestion" checked>Is Edit</input>
                                <!-- kiem tra xem co phai dang edit khong? -->
                            </div>
                            <div style="text-align: right" class="col-lg-3 col-md-12 col-sm-12 col-xs-12 mb-3 ml-auto">
                                <button type="submit" class="btn btn-primary" id="submitFormEditQuestion">Submit</button>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <a href="/seller/courses/<%= question.course_id %>/edit" class="btn btn-secondary mt-3">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <% }); %>
    </div>
</div>