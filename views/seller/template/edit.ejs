<div class="edit-course">
    <div style="padding-top: 74px; padding-bottom:74px;" class="container mt-5">
        <h2>Edit Course</h2>
        <form method="POST" action="./?_method=PATCH">
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                    <label for="name" class="form-label">Course Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Course Name"
                        value="<%= course.name %>">
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" id="price" name="price" placeholder="Price"
                        value="<%= course.price %>">
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                    <label for="videoId" class="form-label">Image</label>
                    <input type="text" class="form-control" id="imageId" name="image" placeholder="Image"
                        value="<%= course.image %>">
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                    <label for="categoryID" class="form-label">
                        Name Category
                    </label>
                    <select class="form-control" aria-label="Default select example" name="categories_id"
                        id="categoryID">
                        <% categories.forEach(function(category) { %>
                            <% if(category._id===course.categories_id){ %>
                                <option value=<%=category._id %> selected >
                                    <%=category.nameCategory %>
                                </option>
                                <% } else { %>
                                    <option value="<%= category._id %>">
                                        <%=category.nameCategory %>
                                    </option>
                                    <% } %>
                                        <% }) %>
                    </select>
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                    <label for="shortDescription" class="form-label">Short Description</label>
                    <input type="text" class="form-control" id="shortDescription" name="shortDescription"
                        placeholder="Short Description" value="<%= course.shortDescription %>">
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="description" name="Description"
                        placeholder="Description" value="<%= course.description %>">
                </div>
                <div class="w-100">
                    <button type="submit" class="btn btn-primary btn-save">Save course</button>
                </div>
            </div>
        </form>
            <div class="row">
                <h2 class="ml-3">Add Video</h2>
                <% lessons.forEach(function(lesson) { %>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb-3">
                        <div class="row course-container">
                            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                <iframe width="220" height="120"
                                    src="https://www.youtube.com/embed/<%= lesson.urlVideo %>"
                                    title="YouTube video player" frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen>
                                </iframe>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <h3 class="title">
                                    <%= lesson.title %>
                                </h3>
                            </div>
                            <div class="col-lg-2 col-md-10 col-sm-6 col-xs-6">
                                <a href="/seller/courses/<%= course._id %>/lessons/<%= lesson._id %>/edit?edit=true" id="editVideoBtn" type="edit"
                                    class="btn btn-info edit">Edit</a>
                                    <form method="POST" action="/seller/courses/<%= course._id%>/lessons/<%= lesson._id %>?_method=DELETE">
                                        <button type="submit" class="btn btn-danger">
                                            Delete
                                        </button>
                                    </form>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        <form method="POST" action="/seller/courses/create/2/<%= course._id %>">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt-3 input-container">
                    <div class="row">
                        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                            <input type="text" class="form-control" id="urlVideo" name="urlVideo" placeholder="URL" />
                        </div>
                        <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 mb-3">
                            <input type="text" class="form-control" id="title" name="title" placeholder="Course Name" />
                        </div>
                        <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 mb-3 d-none">
                            <input type="checkbox" name="isEdit" checked>Is Edit</input>
                            <!-- kiem tra xem co phai dang edit khong? -->
                        </div>
                        <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 mb-3">
                            <button type="submit" class="btn btn-primary">Add Lesson</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
            <div class="row">
                <h2 class="ml-3 mt-5">Add Question</h2>
                <% questions.forEach(function(question) { %>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb-3">
                        <div class="row course-container">
                            <div class="col-lg-9 col-md-6 col-sm-6 col-xs-12">
                                <h3 class="title">
                                    <%= question.question %>
                                </h3>
                            </div>
                            <div class="col-lg-2 col-md-10 col-sm-6 col-xs-6">
                                <a href="/seller/courses/<%= course._id %>/questions/<%= question._id %>/edit?edit=true" id="editQuestionBtn" type="edit"
                                    class="btn btn-info edit">Edit</a>
                                <form method="POST" action="/seller/courses/<%= course._id %>/questions/<%= question._id %>?_method=DELETE&edit=true">
                                    <button class="btn btn-danger delete">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <form method="POST" action="/seller/courses/create/3/<%= course._id %>?edit=true">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt-3 input-container">
                    <div class="row">
                        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                            <label for="name" class="form-label">Name Question</label>
                            <input type="text" class="form-control" id="question" name="question"
                                placeholder="Name Question" />
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                            <label for="name" class="form-label">Choose the correct answer</label>
                            <select class="form-control" aria-label="Default select example" name="trueAnswer" id="trueAnswer">
                                <option value="a">A</option>
                                <option value="b">B</option>
                                <option value="c">C</option>
                                <option value="d">D</option>
                            </select>
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                            <label for="name" class="form-label">A</label>
                            <input type="text" class="form-control" id="aAnswer" name="aAnswer" placeholder="Answer A" />
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                            <label for="name" class="form-label">B</label>
                            <input type="text" class="form-control" id="bAnswer" name="bAnswer" placeholder="Answer B" />
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                            <label for="name" class="form-label">C</label>
                            <input type="text" class="form-control" id="cAnswer" name="cAnswer" placeholder="Answer C" />
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-3">
                            <label for="name" class="form-label">D</label>
                            <input type="text" class="form-control" id="dAnswer" name="dAnswer" placeholder="Answer D" />
                        </div>
                        <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 mb-3 d-none">
                            <input type="checkbox" name="isQuestionEdit" checked>Is Question Edit</input>
                            <!-- kiem tra xem co phai dang edit khong? -->
                        </div>
                        <div style="text-align: right" class="col-lg-3 col-md-12 col-sm-12 col-xs-12 mb-3 ml-auto">
                            <button type="submit" class="btn btn-primary">Add question</button>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <button type="button" onclick="location.href='/seller'"
                                class="btn btn-secondary mt-3">Back</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>